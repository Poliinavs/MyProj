@model Contact //взаимодействуем с моделью контакт
@{
    ViewData["Title"] = "Обратная связь";
}

<h1>Обратная связь</h1>
<form method="post" asp-controller="Contacts" asp-action="check">
    <label asp-for="Name"></label>
    <input asp-for="Name"/>
    <span asp-validation-for="Name"/>

    <label asp-for="SurName"></label>
    <input asp-for="SurName" />
    <span asp-validation-for="SurName" />

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email" />

    <label asp-for="Message"></label>
    <input asp-for="Message" />
    <span asp-validation-for="Message" />

    <label asp-for="Age"></label>
    <input asp-for="Age" />
    <span asp-validation-for="Age" />

    <input type="submit" value="отправить"/>
</form>

@*переход на другую страницу данного контроллера*@
<a asp-controller="Contacts" asp-action="Telephone" >Узнать телефон</a>
